{% trans_default_domain 'FOSUserBundle' %}

<div class="card-header text-xs-center">
    <h4 class="card-title">Inicia sesión</h4>
    <p class="card-subtitle">Restablecer contraseña</p>
</div>
<div class="p-2 bg-white">


    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
    <div class="col-lg-4 push-lg-4">
        {% if error is defined %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="form-group">
            {{ form_widget(form.plainPassword.first,{'attr': {'class': 'form-control','placeholder': 'Nueva contraseña'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.second,{'attr': {'class': 'form-control','placeholder': 'Repita contraseña'}}) }}
        </div>

        <div>
            <input type="submit"  class="btn  btn-primary btn-block" value="{{ 'resetting.reset.submit'|trans }}" />
        </div>
    </div>
    {{ form_end(form) }}


    <div style="clear:both"></div>
</div>
<div class="card-footer text-xs-center bg-white">

    ¿Ya estas registrado? <a href="{{ path('fos_user_security_login') }}">Iniciar</a> | <a href="{{ path('fos_user_registration_register') }}">Registrarse</a> 
</div>



