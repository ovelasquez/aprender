{% trans_default_domain 'FOSUserBundle' %}


<div class="card-header text-xs-center">
    <h4 class="card-title">Inicia sesión</h4>
    <p class="card-subtitle">Accede a tu cuenta</p>
</div>
<div class="p-2 bg-white">

    <form action="{{ path("fos_user_security_check") }}" method="post">
        <div class="col-lg-4 push-lg-4">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="form-group">
                <input type="text" id="username"  class="form-control" placeholder="Email Address"  name="_username" value="{{ last_username }}" required="required" />
            </div>
            <div class="form-group">
                <input type="password" id="password"  class="form-control" placeholder="Password"  name="_password" required="required" />
            </div>
            <div class="form-group ">
                <button type="submit" class="btn  btn-primary btn-block">
                    <span class="btn-block-text">Iniciar</span>
                </button>
            </div>
            <div class="text-xs-center">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">Recordarme</label>
                
            </div> 
        </div>
    </form>
    <div style="clear:both"></div>
</div>
<div class="card-footer text-xs-center bg-white">
    <a href="{{ path('fos_user_registration_register') }}">Registrarse</a> <br />
    <a href="{{ path('fos_user_resetting_request') }}">¿Olvidó su contraseña?</a>
</div>