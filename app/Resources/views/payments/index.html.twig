{% extends 'base_e.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Inicio</a></li>
        <li class="breadcrumb-item">Pagos</li>
    </ol>   
    <h4  class="page-heading">Historial de pagos</h4>
    
    <div class="card">
        <table class="table">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th class="text-xs-center">Curso</th>
                    <th class="text-xs-center">Monto</th>
                    <th class="text-xs-center">Ver</th>
                </tr>
            </thead>
            <tbody>
                {% for payment in payments %}
                <tr>  
                    {% set invoce=payment.result|jsondecode%}                   
                    <td>{{ invoce.create_time|date('d-m-Y H:i:s') }}</td>
                    <td class="text-xs-center">{{ payment.course.title }}</td>
                    <td class="text-xs-center">{{ payment.amount |price}}</td>
                    <td class="text-xs-center"><a href="{{ path('payments_show', { 'id': payment.id }) }}">#{{ payment.id}}</td>
                </tr>
                {% endfor%}
            </tbody>
        </table>
    </div>

   
    
{% endblock %}
