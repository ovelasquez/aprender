{% extends 'base_i.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('instructor') }}">Inicio</a></li>
        <li class="breadcrumb-item active">Estudiantes por calificar</li>
    </ol>   
    <div class="row mb-2 filters">
        <div class="col-lg-6">
            <h1>Estudiantes por calificar</h1>
        </div>
      
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div >
               

                {% for student in students %}
               
                    <div class="card ">
                        <div class="card-header bg-white">
                            <div class="media">
                                <div class="media-left media-middle">
                                    {% if student.photo!='' %}
                                        <a href="{{ path('student_show', { 'id': student.id }) }}"><img src="{{ asset('uploads/photos/') }}{{student.photo}}" width="100" class="rounded"/></a>
                                        {% endif %}
                                </div>
                                <div class="media-body media-middle">
                                    <h4 class="card-title "><a class="text-primary" href="{{ path('student_show', { 'id': student.id }) }}">{{ student.name | title }} {{ student.lastName | title }}</a></h4>
                                    <p>
                                        {{ student.title | title }}
                                    </p>

                                </div>
                                <div class="media-right media-middle">
                                    
                                    <div style="height:50px" >
                                        <a href="{{ path('reviews_new', { 'student': student.id,'course': student.idc }) }}" class="btn btn-rosa btn-md btn-block">Calificar </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}



            </div>

        </div>

    </div>

    
{% endblock %}





